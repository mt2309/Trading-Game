<UserControl x:Class="Main_Game.City"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500" d:DesignWidth="1000" 
    KeyDown="city_KeyDown"
    IsTabStop="True" LostFocus="UserControl_LostFocus" GotFocus="UserControl_GotFocus">
    
    <Grid x:Name="LayoutRoot" Background="Beige">
        <Canvas x:Name="cnvCity" Height="500" Width="1000">
            <Image x:Name="CityBackground" Source="Images/lttp_map14.png" Canvas.Top="-400" Canvas.Left="0"></Image>
            <Image x:Name="mainChar" Source="Images/Gothitelle.png" Canvas.Left="500" Canvas.Top="300" Height="64" Width="64"></Image>
        </Canvas>
    </Grid>
</UserControl>
