<UserControl x:Class="Main_Game.LoginScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="640" d:DesignHeight="480"
    Name="Login" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">

    <Grid x:Name="LayoutRoot">
        <Button Content="Login" Height="41" HorizontalAlignment="Left" Margin="193,271,0,0" Name="LoginButton" VerticalAlignment="Top" Width="119" Click="LoginButton_Click" OpacityMask="{x:Null}"></Button>
        <sdk:Label Content="Username:" Height="20" HorizontalAlignment="Left" Margin="212,198,0,0" Name="userLabel" VerticalAlignment="Top" Width="62" />
        <sdk:Label Content="Password:" Height="20" HorizontalAlignment="Left" Margin="215,230,0,0" Name="passwordLabel" VerticalAlignment="Top" Width="62" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="280,196,0,0" Name="userInput" VerticalAlignment="Top" Width="107" />
        <PasswordBox Height="24" HorizontalAlignment="Left" Margin="280,227,0,0" Name="passwordBox" VerticalAlignment="Top" Width="107" />
        <Button Content="Register" Height="41" HorizontalAlignment="Left" Margin="328,271,0,0" Name="registerButton" VerticalAlignment="Top" Width="121" />
    </Grid>
</UserControl>
