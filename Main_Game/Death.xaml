<controls:ChildWindow x:Class="Main_Game.DeathWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="Death" Name="deathWindow" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="returnBtn" Content="Return to Tavern" Click="OKButton_Click" Width="123" HorizontalAlignment="Right" Margin="0,180,129,44" />
        <Image Height="167" HorizontalAlignment="Left" Margin="74,0,0,0" Name="deathImg" Stretch="Fill" VerticalAlignment="Top" Width="241" Source="/Main_Game;component/Images/trolled.jpg" />
    </Grid>
</controls:ChildWindow>