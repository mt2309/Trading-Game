<controls:ChildWindow x:Class="Main_Game.DeathWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="132" 
           Title="Death" Name="deathWindow" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2" Height="262">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Height="81" HorizontalAlignment="Left" Margin="20,12,0,0" Name="textBlock1" Text="You have died. Though your body is defeated, your spirit lives on..." VerticalAlignment="Top" Width="338" TextWrapping="Wrap" TextAlignment="Center" />
        <Image Height="167" HorizontalAlignment="Left" Margin="12,94,0,0" Name="deathImg" Stretch="Fill" VerticalAlignment="Top" Width="241" Source="/Main_Game;component/Images/trolled.jpg" Visibility="Collapsed" />
        <Button x:Name="returnBtn" Content="Return to Tavern" Click="OKButton_Click" Width="123" HorizontalAlignment="Right" Margin="0,51,125,173" />
    </Grid>
</controls:ChildWindow>